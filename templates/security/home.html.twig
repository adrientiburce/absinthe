{% extends 'base.html.twig' %}

{% block title %}<title>Absinthe - Mon Compte</title>{% endblock %}

{% block body %}
<div class="container mt-4">
<h2>Mon Compte</h2>
<h4 class="text-right text-secondary">Compte crée le {{ app.user.createdAt|date("d/m/Y") }}</h4>
<table class="table table-hover">
    <thead>
        <tr>
            <th colspan="2">Champ</th>
            <th >Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>Email</th>
            <td> {{app.user.email}}</td>
            <td colspan="2"><button>Modifier</button></td>
        </tr>
        <tr>
            <th>Pseudo</th>
            <td>{{app.user.pseudo|default('pseudo non renseigné')}}</td>
        </tr>
        <tr>
            <th colspan="2">Mot de Passe </th>
            <td><button>Modifier</button></td>
        </tr>
    </tbody>
</table>

</div>
{% endblock %}