{% extends 'base.html.twig' %}

{% block title %}<title>Absinthe - Connexion</title>{% endblock %}

{% block body %}
<div class="container mt-4">
    {% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
    {% endfor %}
       {% for message in app.flashes('danger') %}
    <div class="alert alert-danger">
        {{ message }}
    </div>
    {% endfor %}
    <form method="post">
        {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Entrez vos identifiants :</h1>
        <div class="form-group">
            <label for="inputEmail" class="sr-only">Adresse Centralienne ou Pseudo</label>
            <input value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email ou Pseudo"
                required autofocus>
        </div>
        <div class="form-group">
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe"
                required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html
        #}

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
        </div>
        <button class="login__btn" type="submit">
            Connexion
        </button>
    </form>
</div>
{% endblock %}